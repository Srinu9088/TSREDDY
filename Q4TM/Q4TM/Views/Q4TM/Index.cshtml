            <li data-target="#myCarousel" data-slide-to="10"></li>
            <li data-target="#myCarousel" data-slide-to="11"></li>
            <li data-target="#myCarousel" data-slide-to="12"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" id="winSize" style="margin-top:-13pt">
            <div class="item active">
                <img src="~/Content/Images/one (1).jpg" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/one (1).png" style="width:100%;">
            </div>

            <div class="item">
