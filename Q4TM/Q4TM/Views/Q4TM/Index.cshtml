            </div>

            <div class="item">
                <img src="~/Content/Images/two (6).jpg" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/one (7).jpg" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/Images/two (1).jpg" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/Images/two (1).png" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/Images/two (3).jpg" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/Images/two (2).png" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/Content/Images/t.jpg" style="width:100%;">
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
